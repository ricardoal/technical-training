<odoo>
    <!-- Vista de formulario (form view) para test.model -->
    <record id="view_test_model_form" model="ir.ui.view">
        <field name="name">test.model.form.view</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Test Model">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista desde el menú -->
    <record id="action_test_model" model="ir.actions.act_window">
        <field name="name">Test Model</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ítem de menú para acceder a la vista -->
    <menuitem id="menu_test_model" name="Test Model" parent="base.menu_custom" action="action_test_model"/>
</odoo>
